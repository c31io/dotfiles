### IME
exec --no-startup-id fcitx5 -d
### Variables
set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term foot
set $menu dmenu_run_history -fn NotoSansLight -sb "#444444"
set $font Noto Sans Light
set $size 12
set $foreground #DDDDDDCC
set $background #444444CC
set $none #00000000
set $white #EEEEEECC
set $grey #CCCCCCCC
set $gray #888888CC 
set $black #222222CC
set $red #EE4444CC
### Appearance
font $font $size
default_border none
default_floating_border none
title_align center
titlebar_border_thickness 0
titlebar_padding 0
client.focused $none $background $white
client.focused_inactive $none $gray $white
client.focused_tab_title $none $gray $white
client.unfocused $none $black $foreground
client.urgent $none $red $foreground
### Gesture
bindgesture swipe:right workspace prev
bindgesture swipe:left workspace next
### Apps
bindsym $mod+q exec qbittorrent
bindsym $mod+F1 exec firefox
bindsym $mod+F2 exec google-chrome-stable --gtk-version=4 --proxy-server='socks5://127.0.0.1:7890'
bindsym $mod+F3 exec google-chrome-stable --gtk-version=4
bindsym $mod+F4 exec neovide
bindsym $mod+F5 exec zettlr
bindsym $mod+F6 exec solfege
bindsym $mod+F7 bar mode toggle
bindsym --locked $mod+F8 output eDP-1 toggle
bindsym --locked $mod+F10 exec swaymsg output eDP-1 power toggle && swaymsg output HDMI-A-1 power toggle
### Floating term
for_window [app_id="float"] floating enable
bindsym $mod+equal exec foot -a float htop
bindsym $mod+Shift+Return exec $term --class float
### Output configuration
output * bg ~/.bg fill
output eDP-1 resolution 1920x1080 position 0,1080
output HDMI-A-1 resolution 1920x1080 position 0,0
bindswitch lid:on output eDP-1 disable
bindswitch lid:off output eDP-1 enable
### Input configuration
input "1739:32382:DELL0828:00_06CB:7E7E_Touchpad" {
    tap enabled
    scroll_factor 0.4
    natural_scroll enabled
    middle_emulation enabled
}
input "1386:891:Wacom_One_by_Wacom_M_Pen" {
    # ABS_X 21600 ABS_Y 13500
    #map_to_output eDP-1
    map_to_region 0 0 1920 1200
}
input type:keyboard {
    repeat_rate 20
    repeat_delay 250
    xkb_options caps:swapescape
    #xkb_options caps:escape_shifted_capslock
}
### Key bindings
# Basics:
    bindsym $mod+Return exec $term
    bindsym $mod+w kill
    bindsym $mod+Space exec $menu
    floating_modifier $mod normal
    bindsym $mod+Alt+r reload
    bindsym $mod+Alt+q exec sway exit
    bindsym $mod+Alt+s exec systemctl suspend
    bindsym $mod+Alt+p exec systemctl poweroff
# Moving around:
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right
    bindsym $mod+Shift+$left move left
    bindsym $mod+Shift+$down move down
    bindsym $mod+Shift+$up move up
    bindsym $mod+Shift+$right move right
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right
# Workspaces:
    bindsym $mod+1 workspace number 1
    bindsym $mod+2 workspace number 2
    bindsym $mod+3 workspace number 3
    bindsym $mod+4 workspace number 4
    bindsym $mod+5 workspace number 5
    bindsym $mod+6 workspace number 6
    bindsym $mod+7 workspace number 7
    bindsym $mod+8 workspace number 8
    bindsym $mod+9 workspace number 9
    bindsym $mod+0 workspace number 0
    bindsym $mod+BracketLeft workspace prev
    bindsym $mod+BracketRight workspace next
    bindsym $mod+Shift+1 move container to workspace number 1
    bindsym $mod+Shift+2 move container to workspace number 2
    bindsym $mod+Shift+3 move container to workspace number 3
    bindsym $mod+Shift+4 move container to workspace number 4
    bindsym $mod+Shift+5 move container to workspace number 5
    bindsym $mod+Shift+6 move container to workspace number 6
    bindsym $mod+Shift+7 move container to workspace number 7
    bindsym $mod+Shift+8 move container to workspace number 8
    bindsym $mod+Shift+9 move container to workspace number 9
    bindsym $mod+Shift+0 move container to workspace number 0
    bindsym $mod+Shift+BracketLeft move container to workspace prev
    bindsym $mod+Shift+BracketRight move container to workspace next
# Layout stuff:
    bindsym $mod+v splith
    bindsym $mod+s splitv
    bindsym $mod+Shift+m layout stacking
    bindsym $mod+m layout tabbed
    bindsym $mod+t layout toggle split
    bindsym $mod+f floating toggle
    bindsym $mod+Tab focus mode_toggle
    bindsym $mod+p focus parent
# Scratchpad:
    bindsym $mod+Shift+minus move scratchpad
    bindsym $mod+minus scratchpad show
# Resizing containers:
mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"
# XF86
set $volume notify-send -t 1000 "$(pactl list sinks | rg "Mute|Volume|Active Port" | awk 'FNR==1{print $1$2}FNR==2{print $1$5}FNR==4{print $3}')"
set $mpc notify-send -t 1000 "$(mpc)"
set $light v=$(light) && notify-send -t 1000 "${v%.*}"
bindsym --locked XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle && $volume
bindsym --locked XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5% && $volume
bindsym --locked XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5% && $volume
bindsym --locked XF86AudioRaiseVolume+Shift exec pactl set-sink-volume @DEFAULT_SINK@ +1% && $volume
bindsym --locked XF86AudioLowerVolume+Shift exec pactl set-sink-volume @DEFAULT_SINK@ -1% $volume
bindsym --locked XF86AudioPrev exec mpc -q prev && $mpc
bindsym --locked XF86AudioPlay exec mpc -q toggle && $mpc
bindsym --locked XF86AudioNext exec mpc -q next && $mpc
bindsym --locked XF86AudioPause exec mpc -q toggle && $mpc
bindsym --locked XF86MonBrightnessUp exec light -A 5 && $light
bindsym --locked XF86MonBrightnessDown exec light -U 5 && $light
bindsym --locked XF86MonBrightnessUp+Alt exec light -S 100 && $light
bindsym --locked XF86MonBrightnessDown+Alt exec light -S 0.02 && $light
bindsym --locked XF86MonBrightnessUp+Shift exec light -A 1 && $light
bindsym --locked XF86MonBrightnessDown+Shift exec light -U 1 && $light
bindsym XF86PowerOff exec foot -a float paru
# Status Notification
bindsym $mod+c exec notify-send "BAT0 $(cat /sys/class/power_supply/BAT0/capacity /sys/class/power_supply/BAT0/status)" -t 1000
bindsym $mod+i exec notify-send "$(iwctl station wlan0 show | rg network | awk '{print substr($0,index($0,$3))}' | awk '{$1=$1};1')" -t 1000
# Status Bar:
bar {
    colors {
        background $background
        statusline $foreground
        separator $foreground
        focused_workspace $white $white $black
        active_workspace $grey $grey $foreground
        inactive_workspace $gray $gray $foreground
        urgent_workspace $red $red $foreground
    }
    font $font $size
    height 24
    icon_theme Papirus
    mode hide
    status_command ~/.config/sway/status_command.sh
}
include /etc/sway/config.d/*
